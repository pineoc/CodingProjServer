<body>
  <!--카테고리 메인-->
    <div class="container-fluid" id="categoryMain" style="display:block">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>categoryNum</th>
                    <th>categoryName</th>
                </tr>
            </thead>
            <tbody>
                <% for (var i=0; i < categoryNum; i++) { %>
                    <tr>
                        <td><%=categorys[i].cateID%></td>
                        <td><%=categorys[i].cateName%></td>
                    </tr>
                <%}%>
            </tbody>
        </table>
          <button  class="btn btn-success" onclick="showAddDiv('addDiv','categoryMain')">카테고리추가</button>
          <button class="btn btn-success"onclick="showDeleteDiv('deleteDiv','categoryMain')">카테고리 삭제</button>
      </div>
      <!--카테고리 추가-->
      <div id="addDiv" style="display:none">
          <div class="form-group">
              <label for="카테고리 이름">CategoryName:</label>
              <input class="form-control" type="카테고리 이름" id="categoryName" placeholder="카테고리 이름을 입력해주세요">
              <label for="카테고리 아이디">CategoryId:</label>
              <input class="form-control" type="카테고리 아이디" id="categoryName" placeholder="카테고리 아이디를 입력해주세요">
              <label for="카테고리 이미지">CategoryImage:</label>
              <input type="file" id="categoryName" placeholder="카테고리를 입력해주세요">
              <br>
              <button class="btn btn-success" onclick="showCategoryMain('addDiv','categoryMain')">완료</button>
            </div>
    </div>
    <!--카테고리 삭제-->
    <div id="deleteDiv" style="display:none">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>categoryNum</th>
                    <th>categoryName</th>
                    <th>삭제</th>
                </tr>
            </thead>
            <tbody>
                <% for (var i=0; i < categoryNum; i++) { %>
                    <tr>
                        <td><%=categorys[i].cateID%></td>
                        <td><%=categorys[i].cateName%></td>
