                document.getElementById("j_email").focus();
                return;
            }

            if(!inputPwd){
                alert('input the password please');
                document.getElementById("j_pwd").focus();
                return;
            }

            param = {
                email : inputEmail,
                pwd : inputPwd
            };

            //ajax started
            $.ajax({
                url: '/web/login_test',
                type: 'POST',
                data:param,
                error: function errorHandler(jqXHR, textStatus, errorThrown) {
                    alert("login fail! (Server error)");
                },
                success: function successHandler(data, status, xhr) {
                    if (data.status === 's') {
                        alert('login success');
                        if(data.isMaster==true){
                            window.location.replace("/web/login")
                        }
                        window.location.replace("/web/master/main");
                        return;
                    }
                    else{
                        alert('login fail');
                        return;
                    }
                }

            });


            event.preventDefault();
        });
    });
</script>

